  "version": "0.2.0",
  "configurations": [
    {
      "name": "Flask Server",
      "type": "python",
      "request": "launch",
      "program": "${workspaceRoot}/server.py",
      "console": "integratedTerminal",
      "env": {
        "FLASK_APP": "${workspaceRoot}/server.py"
      },
      "args": [
        "run"
      ]
    },
    {
      "name": "Run Tests",
      "type": "python",
      "request": "launch",
      "program": "${workspaceRoot}/tests/main.py",
      "console": "integratedTerminal",
      "args": [
        ".test"
      ]
    },
  ]
}